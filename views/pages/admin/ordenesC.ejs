<div class="row">
  <div class="col-md-12">
    <% flash.get('mensaje').forEach(function (msg) { %>
    <div class="alert alert-info text-center" role="alert"><%=msg%></div>
    <% }) %>

    <h2>Ordenes del Cliente</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">id Orden</th>
          <th scope="col">Fecha Orden</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% ordenes.forEach( orden => { %>
        <tr>
          <td scope="row"><%=orden.id%></td>
          <td><%=orden.fecha%></td>
          <td><%=orden.total%></td>
          <td>
            <a class="btn btn-light mx-2" href="/admin/ver-foto/<%=orden.id%>"
              >Ver Fotos</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
