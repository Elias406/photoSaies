<div class="row">
  <div class="col-md-12">
    <% flash.get('mensaje').forEach(function (msg) { %>
    <div class="alert alert-info text-center" role="alert"><%=msg%></div>
    <% }) %>

    <h2>Lista de Cliente</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Nombre</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% cliente.forEach( cliente => { %>
        <tr>
          <td scope="row"><%=cliente.id%></td>
          <td><%=cliente.nombre%></td>
          <td>
            <a
              class="btn btn-light mx-2"
              href="/admin/ver-ordenes/<%=cliente.id%>"
              >Ver Ordenes</a
            >
          </td>
          <td>
            <% if (cliente.activa) { %>
            <a
              href="/admin/desactivar-cliente/<%=cliente.id%>"
              class="btn btn-info"
              >Desactivar Cliente</a
            >
            <% } else { %>
            <a
              href="/admin/activar-cliente/<%=cliente.id%>"
              class="btn btn-primary"
              >Activar Cliente</a
            >
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
